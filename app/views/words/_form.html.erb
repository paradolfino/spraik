<%= form_for [@category, @word] do |f| %>
    <%= f.text_field :eng_si, placeholder: "English Singular" %><br/>
    <%= f.text_field :nor_si, placeholder: "Normangian Singular" %><br/>
    <%= f.text_field :eng_pl, placeholder: "English Plural" %><br/>
    <%= f.text_field :nor_pl, placeholder: "Normangian Plural" %><br/>
    <%= f.text_field :eng_def_si, placeholder: "English Definite Singular" %><br/>
    <%= f.text_field :nor_def_si, placeholder: "Normangian Definite Singular" %><br/>
    <%= f.text_field :eng_def_pl, placeholder: "English Definite Plural" %><br/>
    <%= f.text_field :nor_def_pl, placeholder: "Normangian Definite Plural" %><br/>
    <%= f.submit "Add Word" %>
<% end %>