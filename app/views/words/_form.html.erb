<%= form_for @word do |f| %>
    <% if params[:category_id] %>
        <%= f.hidden_field(:category_id, :value => params[:category_id]) %>
    <% else %>
        <%= f.select :category_id, options_from_collection_for_select(@categories, 'id', 'title') %>
    <% end %>
    
    <%= f.text_field :eng_si, placeholder: "English Singular" %><br/>
    <%= f.text_field :nor_si, placeholder: "Normangian Singular" %><br/>
    <%= f.text_field :eng_pl, placeholder: "English Plural" %><br/>
    <%= f.text_field :nor_pl, placeholder: "Normangian Plural" %><br/>
    <%= f.text_field :eng_def_si, placeholder: "English Definite Singular" %><br/>
    <%= f.text_field :nor_def_si, placeholder: "Normangian Definite Singular" %><br/>
    <%= f.text_field :eng_def_pl, placeholder: "English Definite Plural" %><br/>
    <%= f.text_field :nor_def_pl, placeholder: "Normangian Definite Plural" %><br/>
    <%= f.text_field :eng_pre, placeholder: "English Present Tense" %><br/>
    <%= f.text_field :nor_pre, placeholder: "Normangian Present Tense" %><br/>
    <%= f.text_field :eng_past, placeholder: "English Past Tense" %><br/>
    <%= f.text_field :nor_past, placeholder: "Normangian Past Tense" %><br/>
    <%= f.text_field :eng_fut, placeholder: "English Future Tense" %><br/>
    <%= f.text_field :nor_fut, placeholder: "Normangian Future Tense" %><br/>
    <%= f.submit "Add Word" %>
<% end %>