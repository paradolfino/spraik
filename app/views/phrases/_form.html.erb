<%= form_for @phrase do |f| %>
    <% if params[:category_id] && params[:word_id] %>
        <%= f.hidden_field(:category_id, :value => params[:category_id]) %>
        <%= f.hidden_field(:word_id, :value => params[:word_id]) %>
    <% end %>
    <%= f.text_field :eng, placeholder: "English Phrase" %><br/>
    <%= f.text_field :nor, placeholder: "Normangian Phrase" %><br/>
    <%= f.submit "#{val} Phrase" %>
<% end %>